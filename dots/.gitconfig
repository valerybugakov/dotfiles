[user]
  name = Valery Bugakov
  email = skymk1@gmail.com

[apply]
  whitespace = nowarn

[github "user"]

[merge]
  tool = vimdiff
  summary = true

[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = cyan bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  editor = vim
  autocrlf = input
  excludesfile = ~/.gitignore
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  quotepath = false
  ignorecase = false

[url "https://"]
  insteadOf = git://

[push]
  default = matching

[credential]
  helper = osxkeychain

[diff]
  compactionHeuristic = true
[http "https://gopkg.in"]
	followRedirects = true
